<% provide(:title, "Select") %>
<div class="row">
    <div class="col-md-9">
    <div class="container">
      <nav>
        <ul class="nav navbar-nav">
          <li><%= link_to "Recent Post", root_path %></li>
          <li><%= link_to "Selected Post", select_path %></li>

          <% if logged_in? %>
          <%= link_to "New Post", new_micropost_path,  class: "btn btn-lg btn-primary" %>
          <% end %>
        </ul>
      </nav>
    </div>
    <div class = "news">
      <% if @microposts.any? %>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
      <% end %>
    </div>
  </div>

  <%= render 'sidebar' %>
</div>
<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <span class="timestamp">
    Join in : <%= time_ago_in_words(@user.created_at) %> ago.
  </span>
  <p><%= @user.city %></p>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @microposts.any? %>
      <h3>Recent Posts (<%= @microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>

  <div class="col-md-8">
  <% if @user.comments.any? %>
    <h3>Recent Comments (<%= @user.comments.count %>)</h3>
    <% @user.comments.each do |comment| %>
      <% micropost = Micropost.find(comment.micropost_id)%>
      <li id="comment-<%= comment.id %>">
      <span class="timestamp"><%= link_to micropost.title, micropost %></span>
      <span class="timestamp">
      Posted <%= time_ago_in_words(comment.created_at) %> ago.
      </span>
      <p class="content"><%= comment.content %></p>
      </li>
    <% end %>
  <% end %>
  </div>
</div>